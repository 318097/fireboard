{
  "name": "Fireboard",
  "version": "1.0",
  "description": "Daily work tracker for Web developers",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "declarativeContent",
    "storage"
  ],
  "page_action": {
    "default_popup": "./build/index.html"
  }
}