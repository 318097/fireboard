{
  "name": "Fireboard",
  "version": "2.0.0",
  "description": "Daily work tracker for Web developers",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "homepage_url": "https://www.fireboardapp.com",
  "permissions": [
    "declarativeContent",
    "storage"
  ],
  "action": {
    "default_title": "Fireboard",
    "default_popup": "./build/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": "Ctrl+U",
      "description": "Open Fireboard popup application"
    }
  }
}