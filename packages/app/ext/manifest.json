{
  "name": "Fireboard",
  "version": "1.0",
  "description": "Daily work tracker for Web developers",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "declarativeContent",
    "storage"
  ],
  "page_action": {
    "default_popup": "./build/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "commands": {
    "_execute_page_action": {
      "description": "Open Fireboard popup application",
      "suggested_key": {
        "default": "Ctrl+U"
      }
    }
  }
}